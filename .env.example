# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=<value>

# Lambda Configuration
LAMBDA_ENDPOINT=<value>

# K8s Configuration
KUBERNETES_ENDPOINT=<value>

LAMBDA_FUNCTION_NAME=nlp-sentiment-analysis
LAMBDA_TIMEOUT=300
LAMBDA_MEMORY_SIZE=3008

# API Gateway Configuration
API_GATEWAY_NAME=nlp-sentiment-api
API_STAGE=prod

# Kubernetes Configuration
# KUBERNETES_ENDPOINT=<value>
# KUBERNETES_NAMESPACE=<value>

# Backend Service Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=False
LOG_LEVEL=INFO

# Retry Configuration
MAX_RETRIES=3
INITIAL_BACKOFF=5
REQUEST_TIMEOUT=35

# Model Configuration
MODEL_NAME=distilbert-base-uncased
MODEL_TASK=sentiment-analysis
HF_CACHE_DIR=/tmp/huggingface

# Docker Configuration
DOCKER_REGISTRY=your-registry-name
ECR_REPO_NAME=nlp-sentiment-analysis
IMAGE_TAG=latest

# Monitoring
CLOUDWATCH_LOG_GROUP=/aws/lambda/nlp-sentiment-analysis
ENABLE_XRAY_TRACING=false

USE_REAL_ENDPOINTS=true

GROQ_API_KEY=<value>